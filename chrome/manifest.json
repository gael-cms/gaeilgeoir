{
  "name": "Gaeilgeoir",
  "description": "A Google Chrome extension to translate website contents into Irish",
  "version": "0.2.0",
  "manifest_version": 3,
  "action": {
    "default_title": "Enable/Disable",
    "default_icon": {
      "16": "images/icon16-inactive.png",
      "48": "images/icon48-inactive.png",
      "128": "images/icon128-inactive.png"
    }
  },
  "background": {
    "service_worker": "serviceWorker.js"
  },
  "icons": {
    "16": "images/icon16.png",
    "48": "images/icon48.png",
    "128": "images/icon128.png"
  },
  "permissions": ["storage", "tabs", "contextMenus"],
  "content_scripts": [
    {
      "matches": ["http://*/*", "https://*/*"],
      "js": ["gaeilgeoir.js", "exportTranslations.js"]
    }
  ]
}
